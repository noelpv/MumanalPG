                        </div>
                    </li>

                    @*<li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="ProductTypes" asp-action="Index">Tipos de Producto</a></li>*@
                    @*<li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="SpecialTags" asp-action="Index">Etiquetas Especiales</a></li>*@
