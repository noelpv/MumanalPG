@page
@model LoginModel

@{
    ViewData["Title"] = "Ingreso";
}

<section id="wrapper" class="login-register login-sidebar" style="background-image: url(../../lib/theme-elegant/img/background-login.jpg);">
    <div class="login-box card">
        <div class="card-body">
            <form class="form-horizontal form-material no-ajax" method="post">
                <h4>@ViewData["Title"]</h4>
                <hr/>

                <div class="text-center">
                    <a href="javascript:void(0)" class="text-center db">
                        <img src="~/lib/theme-elegant/img/logo-80.png" alt="Home"/><br/>
                        <img src="~/lib/theme-elegant/img/mumanal-text.png" alt="MUMANAL"/>
                    </a>
                </div>

                <div class="form-group m-t-40">
                    <div class="col-xs-12">
                        <input asp-for="Input.Email" class="form-control" required="" placeholder="Usuario" type="text">
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-12">
                        <input asp-for="Input.Password" class="form-control" required="" placeholder="Contraseña" type="password">
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div asp-validation-summary="All" class="text-danger"></div>    
                </div>
                
                <div class="form-group row">
                    <div class="col-md-12">
                        <div class="custom-control custom-checkbox">
                            <input asp-for="Input.RememberMe" class="custom-control-input" id="customCheck1" type="checkbox">
                            <label class="custom-control-label" for="customCheck1">Recuerdame</label>

                          @*  <a asp-page="./ForgotPassword" id="to-recover" class="text-dark pull-right"><i class="fa fa-lock m-r-5"></i> ¿Olvidaste tu contraseña?</a>*@

                        </div>
                    </div>
                </div>
                <div class="form-group text-center m-t-20">
                    <div class="col-xs-12">
                        <button class="btn btn-info btn-lg btn-block text-uppercase btn-rounded" type="submit">INGRESAR</button>
                    </div>
                </div>

                @*<div class="form-group m-b-0">
                    <div class="col-sm-12 text-center">
                        Don't have an account?
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary m-l-5">
                            <b>Sign Up</b>
                        </a>
                    </div>
                </div>*@

            </form>

        </div>
    </div>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}