@model MumanalPG.Models.Ventas.VentaContratacion

@{
    ViewData["Title"] = "Prestaciones / ASR / Contratación (Regular)";
}

<h3>Nueva Contratación</h3>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateReg" onsubmit="return ValidaAntesGrabar()">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input name="IdBeneficiario" type="hidden" value="@ViewBag.IdBeneficiario" />
            @*<input name="IdBeneficiarioGarante" type="hidden" value="@ViewBag.IdBeneficiarioGarante" />*@

            <div class="form-group">
                <label asp-for="IdBeneficiario" class="control-label">Beneficiario</label>
                @Html.DropDownList("Beneficiarios")
            </div>
            <div class="form-group">
                <label asp-for="IdBeneficiarioGarante" class="control-label">Garante</label>
                @Html.DropDownList("Garantes", (IEnumerable<SelectListItem>)ViewBag.Garantes, new { size = "1", style = "width: 300px" })
            </div>
            <div class="form-group">
                <label asp-for="FechaVenta" class="control-label"></label>
                <input asp-for="FechaVenta" class="form-control" type="date" />
                <span asp-validation-for="FechaVenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdVentaTarifario" class="control-label"></label>
                @Html.DropDownList("VentaTarifario", (IEnumerable<SelectListItem>)ViewBag.VentaTarifario, new { size = "1", style = "width: 300px" })
            </div>
            <div class="form-group">
                <label asp-for="Observaciones" class="control-label"></label>
                <input asp-for="Observaciones" class="form-control" />
                <span asp-validation-for="Observaciones" class="text-danger"></span>
            </div>


            @*<table>

                <tr>
                <td><label asp-for="CorrelativoUnidad" class="control-label"></label></td>
                <td>
                    <input asp-for="CorrelativoUnidad" class="form-control" />
                    <span asp-validation-for="CorrelativoUnidad" class="text-danger"></span>
                </td>
            </tr>
                <tr>
                    <td><label asp-for="IdAsrSiver" class="control-label"></label></td>
                    <td>
                        <input asp-for="IdAsrSiver" class="form-control" />
                        <span asp-validation-for="IdAsrSiver" class="text-danger"></span>
                    </td>
                </tr>
            </table>*@

            <br>
            <div class="form-group">
                <input type="submit" value="Grabar" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>

<div>
    <a  class="btn btn-primary btn-lg" asp-action="IndexReg">Regresar a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
