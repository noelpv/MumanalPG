@model MumanalPG.Models.Ventas.VentaTarifario
<form asp-action="@ViewData["Action"]">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @{
        string hasError = "has-danger";
        string stringErrors = "";
        if (ViewData.ModelState.IsValid) { hasError = ""; }
        else
        {
            var errorList = ViewData.ModelState.Where(x => x.Value.Errors.Count > 0).ToDictionary(kvp => kvp.Key);
            stringErrors = String.Join(",", errorList.Select(x => x.Key));
        }

    }
    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
    <input type="hidden" asp-for="IdVentaTarifario" />

    @*<div class="form-group m-b-40 @if(stringErrors.Contains("IdBeneficiarioCategoria")){@hasError}">
            <label asp-for="Categoria" class="form-control-label"></label>
            <input asp-for="IdBeneficiarioCategoria" class="form-control" />
            <span asp-validation-for="IdBeneficiarioCategoria" class="text-danger"></span>
        </div>*@

    <div class="form-group m-b-40 @if(stringErrors.Contains("Descripcion")){@hasError}">
        <label asp-for="Descripcion" class="form-control-label"></label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    <div class="form-group m-b-40 @if(stringErrors.Contains("Escala")){@hasError}">
        <label asp-for="Escala" class="form-control-label"></label>
        <input asp-for="Escala" class="form-control" />
        <span asp-validation-for="Escala" class="text-danger"></span>
    </div>
    <div class="form-group m-b-40 @if(stringErrors.Contains("NumeroCuotas")){@hasError}">
        <label asp-for="NumeroCuotas" class="form-control-label"></label>
        <input asp-for="NumeroCuotas" class="form-control" />
        <span asp-validation-for="NumeroCuotas" class="text-danger"></span>
    </div>
    <div class="form-group m-b-40 @if(stringErrors.Contains("ValorFinalBs")){@hasError}">
        <label asp-for="ValorFinalBs" class="form-control-label"></label>
        <input asp-for="ValorFinalBs" class="form-control" />
        <span asp-validation-for="ValorFinalBs" class="text-danger"></span>
    </div>
    <div class="form-group m-b-40 @if(stringErrors.Contains("IdBeneficiarioCategoria")){@hasError}">

        <label asp-for="IdBeneficiarioCategoria" class="form-control-label"></label>
        <br>
        @Html.DropDownList("BeneficiarioCategoria")
        <span asp-validation-for="IdBeneficiarioCategoria" class="text-danger"></span>
    </div>
</form>
