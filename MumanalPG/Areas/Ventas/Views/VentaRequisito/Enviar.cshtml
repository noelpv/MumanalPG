@model MumanalPG.Models.Ventas.VentaContratacion
<div class="row justify-content-center">
    <div class="col-10">
        <div class="card border-info">
            <div class="card-body">
                <dl class="dl-horizontal">
                    @{
                        ViewData["Title"] = "Enviar";
                    }
                    <h3>@ViewBag.Mensaje</h3>
                    <div>
                        <hr />
                        <dl class="dl-horizontal">
                            <dt>Nro AS</dt>
                            <dd>
                                @Html.DisplayFor(model => model.IdAsrSiver)
                            </dd>
                        </dl>
                        <form asp-action="Enviar">
                            <input type="hidden" asp-for="IdVentaContratacion" />
                            @if (@ViewBag.Mensaje == "Esta Seguro de enviar?")
                            {
                                <input type="submit" value="Enviar" class="btn btn-default" />
                            }
                            <!-- <a asp-action="Index" class="btn btn-default">Regresar a la lista</a> -->
                        </form>
                    </div>
                </dl>
            </div>
        </div>
    </div>
</div>
