@model MumanalPG.Models.Planificacion.PresupuestoIngreso
<form asp-action="@ViewData["Action"]">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @{
        string hasError = "has-danger";
        string stringErrors = "";
        if (ViewData.ModelState.IsValid) { hasError = ""; }
        else
        {
            var errorList = ViewData.ModelState.Where(x => x.Value.Errors.Count > 0).ToDictionary(kvp => kvp.Key);
            stringErrors = String.Join(",", errorList.Select(x => x.Key));
        }

    }
    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
    <input type="hidden" asp-for="IdPresupuestoIngreso" />

    <div class="form-group m-b-40 @if(stringErrors.Contains("IdOrganismoFinanciador")){@hasError}">
        <label asp-for="IdOrganismoFinanciador" class="form-control-label"></label>
        <br>
        @Html.DropDownList("OrganismoFinanciador", ViewBag.OrganismoFinanciador, "Sin asignar", new { @class = "form-control" })
    </div>

    <div class="form-group m-b-40 @if(stringErrors.Contains("IdUnidadEjecutora")){@hasError}">
        <label asp-for="IdUnidadEjecutora" class="form-control-label"></label>
        <br>
        @Html.DropDownList("UnidadEjecutora", ViewBag.UnidadEjecutora, "Sin asignar", new { @class = "form-control" })
    </div>
    
    <div class="form-group m-b-40 @if(stringErrors.Contains("IdRubroIngreso")){@hasError}">
        <label asp-for="IdRubroIngreso" class="form-control-label"></label>
        <br>
        @Html.DropDownList("RubroIngreso", ViewBag.RubroIngreso, "Sin asignar", new { @class = "form-control" })
    </div>

    <div class="form-group m-b-40 @if(stringErrors.Contains("PptoFormulado")){@hasError}">
        <label asp-for="PptoFormulado" class="form-control-label"></label>
        <input asp-for="PptoFormulado" class="form-control" />
        <span asp-validation-for="PptoFormulado" class="text-danger"></span>
    </div>

    @*<div class="form-group m-b-40 @if(stringErrors.Contains("PptoModificaciones")){@hasError}">
        <label asp-for="PptoModificaciones" class="form-control-label"></label>
        <input asp-for="PptoModificaciones" class="form-control" />
        <span asp-validation-for="PptoModificaciones" class="text-danger"></span>
    </div>*@
</form>