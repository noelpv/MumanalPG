@model MumanalPG.Models.Finanzas.Dosificacion
<form asp-action="@ViewData["Action"]">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @{
        string hasError = "has-danger";
        string stringErrors = "";
        if (ViewData.ModelState.IsValid) { hasError = ""; }
        else
        {
            var errorList = ViewData.ModelState.Where(x => x.Value.Errors.Count > 0).ToDictionary(kvp => kvp.Key);
            stringErrors = String.Join(",", errorList.Select(x => x.Key));
        }
    }
    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
    <input type="hidden" asp-for="IdDosificacion" />
    <div class="form-group m-b-40 @if(stringErrors.Contains("IdDocumentoRespaldo")){@hasError}">
        <label asp-for="IdDocumentoRespaldo" class="form-control-label"></label>
        <br>
        @Html.DropDownList("DocumentoRespaldo", ViewBag.DocumentoRespaldo, "Sin asignar", new { @class = "form-control" })
        @*<input asp-for="IdDocumentoRespaldo" class="form-control" />
        <span asp-validation-for="IdDocumentoRespaldo" class="text-danger"></span>*@
    </div>
    <div class="form-group m-b-40 @if(stringErrors.Contains("NumeroAutorizacion")){@hasError}">
        <label asp-for="NumeroAutorizacion" class="form-control-label"></label>
        <input asp-for="NumeroAutorizacion" class="form-control" />
        <span asp-validation-for="NumeroAutorizacion" class="text-danger"></span>
    </div>
    <div class="form-group m-b-40 @if(stringErrors.Contains("IdBeneficiario")){@hasError}">
        <label asp-for="IdBeneficiario" class="form-control-label"></label>
        <br>
        @Html.DropDownList("Beneficiario", ViewBag.Beneficiario, "Sin asignar", new { @class = "form-control" })
        @*<input asp-for="IdBeneficiario" class="form-control" />
        <span asp-validation-for="IdBeneficiario" class="text-danger"></span>*@
    </div>
    <!-- Corregir validacion para Integer[asp.net] = Number[html] -->
    <div class="form-group m-b-40 @if(stringErrors.Contains("CorrelativoInicial")){@hasError}">
        <label asp-for="CorrelativoInicial" class="form-control-label"></label>
        <input asp-for="CorrelativoInicial" class="form-control" />
        <span asp-validation-for="CorrelativoInicial" class="text-danger"></span>
    </div>
    <div class="form-group m-b-40 @if(stringErrors.Contains("CorrelativoFinal")){@hasError}">
        <label asp-for="CorrelativoFinal" class="form-control-label"></label>
        <input asp-for="CorrelativoFinal" class="form-control" />
        <span asp-validation-for="CorrelativoFinal" class="text-danger"></span>
    </div>
    <div class="form-group m-b-40 @if(stringErrors.Contains("CorrelativoFactura")){@hasError}">
        <label asp-for="CorrelativoFactura" class="form-control-label"></label>
        <input asp-for="CorrelativoFactura" class="form-control" />
        <span asp-validation-for="CorrelativoFactura" class="text-danger"></span>
    </div>
</form>