@model MumanalPG.Models.Finanzas.TipoComprobante
<form asp-action="@ViewData["Action"]">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
    <input type="hidden" asp-for="IdTipoComprobante" />
    <div class="form-group m-b-40">
        @Html.LabelFor(m => m.Descripcion, new { @class = "form-control-label" })
        @Html.TextBoxFor(m => m.Descripcion, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Descripcion, "" ,new { @class = "text-danger" })
    </div>
    <div class="form-group m-b-40">
        @Html.LabelFor(m => m.Sigla, new { @class = "form-control-label" })
        @Html.TextBoxFor(m => m.Sigla, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Sigla, "" ,new { @class = "text-danger" })
    </div>
    <div class="form-group m-b-40">
        @Html.LabelFor(m => m.EsEgreso, new {@class = "form-control-label"})
        &nbsp; &nbsp;
        @Html.CheckBoxFor(m => m.EsEgreso, new {@class = "form-control-checkboxfor"})
    </div>
    <div class="form-group m-b-40">
        @Html.LabelFor(m => m.EsIngreso, new {@class = "form-control-label"})
        &nbsp; &nbsp;
        @Html.CheckBoxFor(m => m.EsIngreso, new {@class = "form-control-checkboxfor"})
    </div>
    <div class="form-group m-b-40">
        @Html.LabelFor(m => m.EsContabilidad, new {@class = "form-control-label"})
        &nbsp; &nbsp;
        @Html.CheckBoxFor(m => m.EsContabilidad, new {@class = "form-control-checkboxfor"})
    </div>
    <div class="form-group m-b-40">
        @Html.LabelFor(m => m.EsCobranza, new {@class = "form-control-label"})
        &nbsp; &nbsp;
        @Html.CheckBoxFor(m => m.EsCobranza, new {@class = "form-control-checkboxfor"})
    </div>
    <div class="form-group m-b-40">
        @Html.LabelFor(m => m.EsPago, new {@class = "form-control-label"})
        &nbsp; &nbsp;
        @Html.CheckBoxFor(m => m.EsPago, new {@class = "form-control-checkboxfor"})
    </div>
</form>