@model MumanalPG.Models.Finanzas.PlanCuentas
<form asp-action="@ViewData["Action"]">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @{
        string hasError = "has-danger";
        string stringErrors = "";
        if (ViewData.ModelState.IsValid) { hasError = ""; }
        else
        {
            var errorList = ViewData.ModelState.Where(x => x.Value.Errors.Count > 0).ToDictionary(kvp => kvp.Key);
            stringErrors = String.Join(",", errorList.Select(x => x.Key));
        }

    }
    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
    <input type="hidden" asp-for="IdPlanCuentas" />

    <div class="form-group m-b-40 @if(stringErrors.Contains("Cuenta")){@hasError}">
        <label asp-for="Cuenta" class="form-control-label"></label>
        <textarea asp-for="Cuenta" class="form-control"></textarea>
        <span asp-validation-for="Cuenta" class="text-danger"></span>
    </div>
    <div class="form-group m-b-40 @if(stringErrors.Contains("SubCuenta1")){@hasError}">
        <label asp-for="SubCuenta1" class="form-control-label"></label>
        <textarea asp-for="SubCuenta1" class="form-control"></textarea>
        <span asp-validation-for="SubCuenta1" class="text-danger"></span>
    </div>
    <div class="form-group m-b-40 @if(stringErrors.Contains("SubCuenta2")){@hasError}">
        <label asp-for="SubCuenta2" class="form-control-label"></label>
        <textarea asp-for="SubCuenta2" class="form-control"></textarea>
        <span asp-validation-for="SubCuenta2" class="text-danger"></span>
    </div>
    <div class="form-group m-b-40 @if(stringErrors.Contains("NombreCuenta")){@hasError}">
        <label asp-for="NombreCuenta" class="form-control-label"></label>
        <input asp-for="NombreCuenta" class="form-control" />
        <span asp-validation-for="NombreCuenta" class="text-danger"></span>
    </div>
    <div class="form-group m-b-40 @if(stringErrors.Contains("IdAuxiliar1")){@hasError}">
        <label asp-for="IdAuxiliar1" class="form-control-label"></label>
        <br>
        @Html.DropDownList("Auxiliar1", ViewBag.Auxiliar, "Sin asignar", new { @class = "form-control" })
        @*<input asp-for="IdAuxiliar1" class="form-control" />
        <span asp-validation-for="IdAuxiliar1" class="text-danger"></span>*@
    </div>
</form>