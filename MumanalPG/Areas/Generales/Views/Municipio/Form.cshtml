@model MumanalPG.Models.Generales.Municipio
<form asp-action="@ViewData["Action"]">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @{
        string hasError = "has-danger";
        string stringErrors = "";
        if (ViewData.ModelState.IsValid) { hasError = ""; }
        else
        {
            var errorList = ViewData.ModelState.Where(x => x.Value.Errors.Count > 0).ToDictionary(kvp => kvp.Key);
            stringErrors = String.Join(",", errorList.Select(x => x.Key));
        }
    }
    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
    <input type="hidden" asp-for="IdMunicipio" />
    <div class="form-group m-b-40 @if(stringErrors.Contains("IdProvincia")){@hasError}">
        <label asp-for="IdProvincia" class="form-control-label"></label>
        <br>
        @* @Html.DropDownList("Provincia", ViewBag.Provincia, "Sin asignar", new { @class = "form-control" }) *@
       <select asp-for="IdProvincia" class="form-control"
               asp-items="@(new SelectList(ViewBag.Provincia, "IdProvincia", "Descripcion"))">
       </select>
    </div>
    <div class="form-group m-b-40 @if(stringErrors.Contains("Descripcion")){@hasError}">
        <label asp-for="Descripcion" class="form-control-label"></label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    <div class="form-group m-b-40 @if(stringErrors.Contains("Sigla")){@hasError}">
        <label asp-for="Sigla" class="form-control-label"></label>
        <input asp-for="Sigla" class="form-control" />
        <span asp-validation-for="Sigla" class="text-danger"></span>
    </div>
    <div class="form-group m-b-40 @if(stringErrors.Contains("Poblacion")){@hasError}">
        <label asp-for="Poblacion" class="form-control-label"></label>
        <input asp-for="Poblacion" class="form-control" />
        <span asp-validation-for="Poblacion" class="text-danger"></span>
    </div>
    <div class="form-group m-b-40 @if(stringErrors.Contains("GestionCreacion")){@hasError}">
        <label asp-for="GestionCreacion" class="form-control-label"></label>
        <input asp-for="GestionCreacion" class="form-control" />
        <span asp-validation-for="GestionCreacion" class="text-danger"></span>
    </div>
</form>