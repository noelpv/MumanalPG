@model MumanalPG.Models.Generales.Municipio
<form asp-action="@ViewData["Action"]">
    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
    <input type="hidden" asp-for="IdMunicipio" />

    <div class="form-group m-b-40">
        @Html.LabelFor(m => m.IdProvincia, new { @class = "form-control-label" })
        <br>
        @Html.DropDownListFor(m => m.IdProvincia, new SelectList(ViewBag.Provincia,"IdProvincia","Descripcion"), new { @class = "form-control" })
    </div>
    <div class="form-group m-b-40">
        @Html.LabelFor(m => m.Descripcion, new { @class = "form-control-label" }) 
        @Html.TextBoxFor(m => m.Descripcion, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Descripcion, "" ,new { @class = "text-danger" })
    </div>
    <div class="form-group m-b-40">
        @Html.LabelFor(m => m.Sigla, new { @class = "form-control-label" }) 
        @Html.TextBoxFor(m => m.Sigla, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Sigla, "" ,new { @class = "text-danger" })
    </div>
    <div class="form-group m-b-40">
        @Html.LabelFor(m => m.Poblacion, new { @class = "form-control-label" })
        @Html.EditorFor(m => m.Poblacion, new { htmlAttributes = new { @class = "form-control"}})
        @Html.ValidationMessageFor(m => m.Poblacion, "" ,new { @class = "text-danger" })
    </div>
    <div class="form-group m-b-40">
        @Html.LabelFor(m => m.GestionCreacion, new { @class = "form-control-label" }) 
        @Html.TextBoxFor(m => m.GestionCreacion, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.GestionCreacion, "" ,new { @class = "text-danger" })
    </div>
</form>