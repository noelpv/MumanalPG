    <div class="col-md-4 col-sm-6 col-xs-12">
        <a asp-area="Administra" asp-controller="TipoAlmacen" asp-action="index">
            <div class="ribbon-vwrapper card">
                <div class="ribbon ribbon-primary ribbon-vertical-l">
                    <i class="ti-zip"></i>
