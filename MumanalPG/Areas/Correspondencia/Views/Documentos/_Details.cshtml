@model MumanalPG.Models.Correspondencia.Documento
<div class="row justify-content-center">
    <div class="col-10">
        <div class="card border-info">
            <div class="card-body">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Cite)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Tipo.Nombre)
                    </dd>
                    <dd>
                        @Html.DisplayFor(model => model.FuncionarioDestino.Denominacion)
                    </dd>
                    <dd>
                        @Html.DisplayFor(model => model.FuncionarioOrigen.Denominacion)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Fecha)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Referencia)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>